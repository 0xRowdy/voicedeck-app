{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"files": {
		"include": ["app/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
